{
  "expo": {
    "name": "ToucheArt",
    "slug": "toucheart",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./app/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#D4A574"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.toucheart.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/adaptive-icon.png",
        "backgroundColor": "#D4A574"
      },
      "package": "com.toucheart.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./app/assets/favicon.png",
      "bundler": "metro",
      "name": "ToucheArt",
      "shortName": "ToucheArt",
      "themeColor": "#D4A574",
      "backgroundColor": "#FFFFFF",
      "display": "standalone",
      "manifest": {
        "icons": [
          {
            "src": "./app/assets/logo.png",
            "sizes": "192x192",
            "type": "image/png"
          },
          {
            "src": "./app/assets/logo.png",
            "sizes": "512x512",
            "type": "image/png"
          }
        ]
      }
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ToucheArt to use your location."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./app/assets/icon.png",
          "color": "#D4A574"
        }
      ]
    ]
  }
}

